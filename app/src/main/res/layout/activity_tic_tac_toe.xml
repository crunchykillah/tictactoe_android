<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_night"
    tools:context=".TicTacToe">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TextView "Your Points" -->
        <TextView
            android:id="@+id/YourPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Points:"
            android:textColor="@color/grey"
            android:textSize="25sp"
            android:fontFamily="@font/pixelfont"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/HumanPointsCounter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <!-- TextView "0" -->
        <TextView
            android:id="@+id/HumanPointsCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/pixelfont"
            app:layout_constraintStart_toEndOf="@id/YourPoints"
            app:layout_constraintEnd_toStartOf="@id/PCPoints"
            app:layout_constraintTop_toTopOf="@id/YourPoints"
            app:layout_constraintBottom_toBottomOf="@id/YourPoints" />

        <!-- TextView "PC points" -->
        <TextView
            android:id="@+id/PCPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="PC points:"
            android:textSize="25sp"
            android:fontFamily="@font/pixelfont"
            app:layout_constraintStart_toEndOf="@id/HumanPointsCounter"
            app:layout_constraintEnd_toStartOf="@id/ComputerPointsCounter"
            app:layout_constraintTop_toTopOf="@id/YourPoints"
            app:layout_constraintBottom_toBottomOf="@id/YourPoints" />

        <!-- TextView "0" -->
        <TextView
            android:id="@+id/ComputerPointsCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/pixelfont"
            app:layout_constraintStart_toEndOf="@id/PCPoints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/YourPoints"
            app:layout_constraintBottom_toBottomOf="@id/YourPoints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:onClick="clickBtn1"
                android:gravity="center"
                android:textSize="90sp"
                android:textColor="#00000000"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:onClick="clickBtn2"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="90sp"
                android:textColor="#00000000"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:onClick="clickBtn3"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="90sp"
                android:textColor="#00000000"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:onClick="clickBtn4"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:gravity="center"
                android:textColor="#00000000"
                android:textSize="90sp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:onClick="clickBtn5"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="90sp"
                android:textColor="#00000000"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:onClick="clickBtn6"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="90sp"
                android:textColor="#00000000"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:onClick="clickBtn7"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="90sp"
                android:textColor="#00000000"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:onClick="clickBtn8"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="90sp"
                android:textColor="#00000000"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:onClick="clickBtn9"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="90sp"
                android:textColor="#00000000"
                />
        </TableRow>

    </TableLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restart"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@null"
            android:fontFamily="@font/pixelfont"
            android:onClick="clickRestart"
            android:scaleType="fitCenter"
            android:text="RESTART"
            android:textColor="@color/grey"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="60dp"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:fontFamily="@font/pixelfont"
        />

</RelativeLayout>
